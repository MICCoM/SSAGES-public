echo 		screen
dimension 	3
units 		real
atom_style 	full
bond_style	harmonic
angle_style	harmonic
dihedral_style	harmonic
pair_style lj/cut 12.0
neighbor 20.0 bin
neigh_modify every 1 delay 0 check yes

read_data data.input

#Set up fixes
fix 1 all nvt temp 300 300 100.0

velocity	all create 300 43256 dist uniform

#Call ssages to run the metadynamics
fix ssages all ssages

timestep 1.0

#For the sync to engine to work correctly need to set thermo 1 for now
thermo 1

#dump myDump all xyz 100 dump.xyz


